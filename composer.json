{
    "name": "jawngee/blade",
    "type": "library",
    "description": "Use Laravel Blade templates without the full Laravel framework",
    "keywords": ["laravel", "templating", "template", "views"],
    "homepage": "https://github.com/jawngee/blade",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Craig Duncan",
        "email": "git@duncanc.co.uk",
        "homepage": "https://github.com/duncan3dc",
        "role": "Developer"
    }],
    "require": {
        "illuminate/contracts": ">=5.1,<5.3",
        "illuminate/view": ">=5.1,<5.3",
        "illuminate/events": ">=5.1,<5.3",
        "php": ">=5.6.0"
    },
    "require-dev": {
        "mockery/mockery": "^0.9.4",
        "phpunit/phpunit": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "jawngee\\Laravel\\": "src/",
            "jawngee\\LaravelTests\\": "tests/"
        }
    }
}
